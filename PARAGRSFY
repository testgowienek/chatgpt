/* Paragraf 1 – cztery różne style */
.p1 {
    border-top: 5px solid black;
    border-right: 5px dashed black;
    border-bottom: 5px dotted black;
    border-left: 5px double black;
}

/* Paragraf 2 – kasztanowy góra/dół, zielony boki */
.p2 {
    border-top: 3px solid brown;
    border-bottom: 3px solid brown;
    border-left: 3px solid green;
    border-right: 3px solid green;
}

/* Paragraf 3 – różne grubości, zielona linia kropkowana */
.p3 {
    border-top: 20px dotted green;
    border-bottom: 20px dotted green;
    border-left: 1em dotted green;
    border-right: 3em dotted green;
}
